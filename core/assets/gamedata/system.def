        }
    }
}

link {
    a "Theodem"
    b "Arcos"
}

event "Test" {
}

mission "mission test" {
    title "Test mission"
    offerWhen {
        at "Arcos prime"
    }
    succeedWhen {
        at "Theodem prime"
    }
    failWhen {
    }
    offered {
        change {
            system "Theodem" {
                entity - "Theodem prime" {
                    Body {
                        dimension 300 300
                    }
                }
            }
        }
        text {
            "Hello"
        }
        choice {
            accepted { "I accept" }
            declined { "Na, not now" }
        }
        if accepted {
            text {
                "Good choice."
            }
        }
        if declined {
            text {
                "You brought this on yourself."
            }
        }
    }
    succeeded {
        text {
            "Congratulations, the first mission test worked!"
        }
    }
}

mission "Mission 2" {
    title "Mission 2"
    offerWhen {
        completed "mission test"
    }
    succeedWhen {
        at "Arcos prime"
    }
    offered {
        text {
            "Now that the first mission was a success."
            "Let us see, if you can manage further missions."
        }
        choice {
            accepted { "I certainly can!" }
        }
        text {
            "I knew you could (you had no choice anyways)"
        }
    }
    succeeded {
        text {
            "This was too easy."
            "Far too easy"
        }
    }
}

player {
    template "falcon"
    Character {
        credits + 1000
    }
    Persistence {
        system "Arcos"
    }
}
