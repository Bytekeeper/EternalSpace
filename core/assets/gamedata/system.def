system "Arcos" {
    name "Arcos"
    position 100 50
    asteroidDensity 0.2

    entity - "Arcos prime" {
        template "planet"
        Transform {
            location -120 100
        }
    }
    entity - "Arcos prime moon 1" {
        template "moon"
        Orbiting {
            entity "Arcos prime"
            distance 800
            speed 80
            tidalLock true
        }
    }
    entity {
        template "gas1"
        Transform {
            location 500 -50
        }
    }
}

system "Theodem" {
    name "Theodem"
    position -100 50
    asteroidDensity 0.7

    entity - "Theodem prime" {
        template "planet"
        Transform {
            location 20 100
        }
    }
}

link {
    a "Theodem"
    b "Arcos"
}

event "Test" {
}

mission "mission test" {
    title "Test mission"
    offerWhen {
        at "Arcos prime"
    }
    succeedWhen {
        at "Theodem prime"
    }
    failWhen {
    }
    offered {
        text {
            "Hello"
        }
        choice {
            accepted { "I accept" }
            declined { "Na, not now" }
        }
        if accepted {
            text {
                "Good choice."
            }
        }
        if declined {
            text {
                "You brought this on yourself."
            }
        }
    }
    succeeded {
        change {
        }
        text {
            "Congratulations, the first mission test worked!"
        }
    }
}

mission "Mission 2" {
    title "Mission 2"
    offerWhen {
        completed "mission test"
    }
    succeedWhen {
        at "Arcos prime"
    }
    offered {
        text {
            "Now that the first mission was a success."
            "Let us see, if you can manage further missions."
        }
        choice {
            accepted { "I certainly can!" }
        }
        text {
            "I knew you could (you had no choice anyways)"
        }
    }
    succeeded {
        text {
            "This was too easy."
            "Far too easy"
        }
    }
}

