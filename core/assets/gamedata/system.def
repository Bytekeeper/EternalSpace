system "Arcos" {
    name "Arcos"
    position 100 50
    asteroidDensity 0.2
    traffic {
        group "Small Merchant"
        every 15
    }
    traffic {
        group "Small Raiders"
        every 120
    }

    entity - "Arcos alpha" {
        template "G-Type star"
        Transform {
            location -2000 100
        }
    }

    entity - "Arcos alpha moon 1" {
        template "moon"
        Transform {
            location -1500 0
        }
        Orbiting {
            entity "Arcos alpha"
            distance 500
            speed 200
            tidalLock true
        }
    }

    entity - "Arcos alpha moon 2" {
        template "moon"
        Transform {
            location -2000 500
        }
        Orbiting {
            entity "Arcos alpha"
            distance 500
            speed 200
            tidalLock true
        }
    }

    entity - "Arcos prime" {
        template "planet"
        Name {
            name "Arcos Prime"
        }
        Character {
            faction "United Mars Government"
        }
        Transform {
            location -120 100
        }
    }
    entity - "Arcos 2" {
        template "venuslike1"
        Transform {
            location -20 800
        }
    }
    entity - "Arcos prime moon 1" {
        template "moon"
        Orbiting {
            entity "Arcos prime"
            distance 800
            speed 80
            tidalLock true
        }
    }
    entity {
        template "gas1"
        Transform {
            location 500 -50
        }
    }
    entity {
        template "gas2"
        Transform {
            location -700 200
        }
    }
}

