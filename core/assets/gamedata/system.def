system "Arcos" {
    name "Arcos"
    position 100 50
    asteroidDensity 0.2

    entity - "Arcos prime" {
        template "planet"
        Transform {
            location -120 100
        }
    }
    entity - "Arcos prime moon 1" {
        template "moon"
        Orbiting {
            entity "Arcos prime"
            distance 800
            speed 80
            tidalLock true
        }
    }
    entity - "Arcos prime moon 2" {
        template "moon"
        Orbiting {
            entity "Arcos prime moon 1"
            distance 400
            speed 240
            tidalLock true
        }
    }
    entity - "Arcos prime moon 3" {
        template "moon"
        Orbiting {
            entity "Arcos prime moon 2"
            distance 200
            speed 720
            tidalLock true
        }
    }
    entity - "Arcos prime moon 4" {
        template "moon"
        Orbiting {
            entity "Arcos prime moon 3"
            distance 100
            speed 2160
            tidalLock true
        }
    }
}

